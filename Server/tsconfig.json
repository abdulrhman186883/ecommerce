{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Node backend settings
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "types": ["node"],

    // Build outputs
    "sourceMap": true,
    "declaration": false,

    // Type checking
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
